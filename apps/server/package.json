{
  "name": "templetto-server",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npx tsx src/main.ts",
    "build": "rm -rf dist && rollup -c",
    "build:watch": "rollup -c --watch",
    "start:rest-server": "node dist/rest-server.js",
    "start:locally:rest-server": "node -r dotenv/config dist/rest-server.js",
    "start:puppeteer-worker": "functions-framework --target=main --source=dist/puppeteer-worker.js --port=3001"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/express": "^5.0.3",
    "@types/node": "^22.9.0",
    "rollup": "^4.52.3",
    "typescript": "~5.8.3"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^4.0.0",
    "@google-cloud/logging": "^11.2.1",
    "@google-cloud/logging-winston": "^6.0.1",
    "@sparticuz/chromium": "^138.0.2",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "firebase-admin": "^13.5.0",
    "google-auth-library": "^10.4.0",
    "puppeteer-core": "^24.22.3",
    "tsx": "^4.20.6",
    "zod": "^4.1.11"
  }
}
