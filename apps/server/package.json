{
  "name": "templetto-server",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:rest-server && npm run dev:puppeteer-worker",
    "build": "rm -rf dist && rollup -c",
    "build:watch": "rollup -c --watch",
    "start:rest-server": "node dist/rest-server.js",
    "start:locally:rest-server": "node --env-file=.env dist/rest-server.js",
    "start:puppeteer-worker": "functions-framework --target=main --source=dist/puppeteer-worker.js --port=3001",
    "dev:rest-server": "npx tsx --watch --env-file=.env src/rest-server.ts"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^22.9.0",
    "rollup": "^4.52.3",
    "typescript": "~5.8.3"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^4.0.0",
    "@sparticuz/chromium": "^138.0.2",
    "@templetto/firebase": "*",
    "@templetto/logging": "*",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.1",
    "google-auth-library": "^10.4.0",
    "handlebars": "^4.7.8",
    "puppeteer-core": "^24.22.3",
    "tsx": "^4.20.6",
    "uuid": "^13.0.0",
    "zod": "^4.1.11"
  }
}
